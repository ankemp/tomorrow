{
  "name": "tomorrow",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "tw",
  "sourceRoot": "apps/tomorrow/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/tomorrow",
        "index": "apps/tomorrow/src/index.html",
        "browser": "apps/tomorrow/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/tomorrow/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/tomorrow/public"
          },
          {
            "glob": "**/*",
            "input": "node_modules/@taiga-ui/icons/src",
            "output": "assets/taiga-ui/icons"
          }
        ],
        "styles": [
          "node_modules/@taiga-ui/core/styles/taiga-ui-theme.less",
          "node_modules/@taiga-ui/core/styles/taiga-ui-fonts.less",
          "node_modules/@taiga-ui/addon-mobile/styles/taiga-ui-mobile.less",
          "apps/tomorrow/src/styles.css"
        ],
        "scripts": [],
        "server": "apps/tomorrow/src/main.server.ts",
        "ssr": {
          "entry": "apps/tomorrow/src/server.ts"
        },
        "prerender": true,
        "outputMode": "server"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        },
        "development-no-ssr": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "ssr": true,
          "prerender": false
        }
      },
      "defaultConfiguration": "development"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "tomorrow:build:production"
        },
        "development": {
          "buildTarget": "tomorrow:build:development"
        },
        "development-no-ssr": {
          "buildTarget": "tomorrow:build:development-no-ssr"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "tomorrow:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/tomorrow/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "tomorrow:build",
        "staticFilePath": "dist/apps/tomorrow/browser",
        "spa": true
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/tomorrow/Dockerfile . -t tomorrow"
    }
  }
}
