# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build tomorrow`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 4000:4000 -t tomorrow`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=4000
ENV NODE_ENV=production

WORKDIR /app

RUN addgroup --system tomorrow && \
          adduser --system -G tomorrow tomorrow

COPY dist/apps/tomorrow tomorrow/
COPY package.json package-lock.json tomorrow/
RUN chown -R tomorrow:tomorrow .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix tomorrow --omit=dev install

EXPOSE 4000

CMD [ "node", "tomorrow/server/server.mjs" ]
